<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MenuPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_pg"
    android:elevation="10dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/LoginBtn"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="136dp"
        android:backgroundTint="#FFD12E"
        android:elevation="10dp"
        android:fontFamily="@font/raleway"
        android:shadowColor="#242323"
        android:text="LOGIN"
        android:textColorLink="#BCAE29"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuText" />

    <Button
        android:id="@+id/SignUpBtn"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="136dp"
        android:backgroundTint="#FFD12E"
        android:elevation="10dp"
        android:fontFamily="@font/raleway"
        android:text="SIGN UP"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LoginBtn" />

    <TextView
        android:id="@+id/menuText"
        android:layout_width="341dp"
        android:layout_height="56dp"
        android:layout_marginTop="204dp"
        android:fontFamily="@font/cormorant_sc_semibold"
        android:text="Welcome Back !"
        android:textColor="#FFFFFF"
        android:textSize="42sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>